<?xml version="1.0"?>
<config>
    <modules>
        <ZigZag_Base>
            <version>1.1.3.1</version>
        </ZigZag_Base>
    </modules>

    <global>
        <models>
            <zigzagbase>
                <class>ZigZag_Base_Model</class>
                <resourceModel>zigzagbase_mysql4</resourceModel>
            </zigzagbase>
        </models>
        <resources>
            <zigzagbase_setup>
                <setup>
                    <module>ZigZag_Base</module>
                    <class>ZigZag_Base_Model_Resource_Setup</class>
                </setup>
            </zigzagbase_setup>
        </resources>
        <helpers>
            <zigzagbase>
                <class>ZigZag_Base_Helper</class>
            </zigzagbase>
        </helpers>
        <blocks>
            <zigzagbase>
                <class>ZigZag_Base_Block</class>
            </zigzagbase>
        </blocks>
        <fieldsets>
            <sales_convert_quote>
                <zigzag_delivery_from><to_order>*</to_order></zigzag_delivery_from>
                <zigzag_delivery_to><to_order>*</to_order></zigzag_delivery_to>
            </sales_convert_quote>
            <sales_convert_order>
                <zigzag_delivery_from><to_quote>*</to_quote></zigzag_delivery_from>
                <zigzag_delivery_to><to_quote>*</to_quote></zigzag_delivery_to>
            </sales_convert_order>
        </fieldsets>
        <events>
            <checkout_controller_onepage_save_shipping_method>
                <observers>
                    <zigzag_delivery_date_observer>
                        <type>singleton</type>
                        <class>zigzagbase/observer_saveorder</class>
                        <method>setDeliveryTime</method>
                    </zigzag_delivery_date_observer>
                </observers>
            </checkout_controller_onepage_save_shipping_method>
            <zigzag_shipment_created>
                <observers>
                    <zigzag_shipment_created_after>
                        <class>zigzagbase/observer_shipmentcreated</class>
                        <method>setDeliveryTime</method>
                    </zigzag_shipment_created_after>
                </observers>
            </zigzag_shipment_created>
        </events>
    </global>

    <frontend>
        <routers>
            <zigzag>
                <use>standard</use>
                <args>
                    <module>ZigZag_Base</module>
                    <frontName>zigzag</frontName>
                </args>
            </zigzag>
        </routers>
        <layout>
            <updates>
                <zigzag_base>
                    <file>zigzagbase.xml</file>
                </zigzag_base>
            </updates>
        </layout>
        <translate>
            <modules>
                <Zigzag_Base>
                    <files>
                        <default>Zigzag_Base.csv</default>
                    </files>
                </Zigzag_Base>
            </modules>
        </translate>
    </frontend>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <zigzag before="Mage_Adminhtml">ZigZag_Base_Adminhtml</zigzag>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <layout>
            <updates>
                <zigzag_base>
                    <file>zigzagbase.xml</file>
                </zigzag_base>
            </updates>
        </layout>
        <events>
            <core_block_abstract_prepare_layout_before>
                <observers>
                    <zigzagbase_mass_action>
                        <class>zigzagbase/observer_mass</class>
                        <method>addMassAction</method>
                    </zigzagbase_mass_action>
                </observers>
            </core_block_abstract_prepare_layout_before>
            <model_config_data_save_before>
                <observers>
                    <zigzagbase_config>
                        <class>zigzagbase/observer_config</class>
                        <method>setShippingTypes</method>
                    </zigzagbase_config>
                </observers>
            </model_config_data_save_before>
            <controller_action_layout_render_before_adminhtml_sales_order_view>
                <observers>
                    <zigzagbase_label>
                        <class>zigzagbase/observer_label</class>
                        <method>addButtons</method>
                    </zigzagbase_label>
                </observers>
            </controller_action_layout_render_before_adminhtml_sales_order_view>
            <sales_order_grid_collection_load_before>
                <observers>
                    <zigzagbase_grid_tracking_number>
                        <model>zigzagbase/observer_grid</model>
                        <method>addTrackingToSalesCollection</method>
                    </zigzagbase_grid_tracking_number>
                </observers>
            </sales_order_grid_collection_load_before>
        </events>
        <translate>
            <modules>
                <Zigzag_Base>
                    <files>
                        <default>Zigzag_Base.csv</default>
                    </files>
                </Zigzag_Base>
            </modules>
        </translate>
    </adminhtml>

    <default>
        <carriers>
            <zigzagbase>
                <model>zigzagbase/carrier_zigzag</model>
            </zigzagbase>
        </carriers>
    </default>
</config>
