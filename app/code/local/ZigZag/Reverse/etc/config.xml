<?xml version="1.0"?>
<config>
    <modules>
        <ZigZag_Reverse>
            <version>1.0.2</version>
        </ZigZag_Reverse>
    </modules>
    <global>
        <models>
            <zigzagreverse>
                <class>ZigZag_Reverse_Model</class>
            </zigzagreverse>
        </models>
    </global>
    <frontend>
        <events>
            <sales_order_place_after>
                <observers>
                    <zigzag_sales_order_place_after_reverse>
                        <class>zigzagreverse/observer_salesorderplaceafter</class>
                        <method>shipOrder</method>
                    </zigzag_sales_order_place_after_reverse>
                </observers>
            </sales_order_place_after>
        </events>
    </frontend>
    <default>
        <carriers>
            <zigzagreverse>
                <active>0</active>
                <title>ZigZag</title>
                <name>Reverse</name>
                <shipping_cost>10</shipping_cost>
                <sallowspecific>0</sallowspecific>
                <auto_shipment>0</auto_shipment>
                <order_statuses>processing</order_statuses>
                <sort_order>15</sort_order>
                <model>zigzagreverse/carrier_reverse</model>
            </zigzagreverse>
        </carriers>
    </default>
</config>